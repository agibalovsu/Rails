<div class="row justify-content-center mt-3">
  <div class="col col-md-4"><h1><%= t('.header') %></h1></div>
    <div class="col-12">
      <p>
        <%= link_to t('.new_badge'), new_admin_badge_path %>
      </p>

      <%= render 'shared/errors', resource: @badge %>
      
      <table class="table table-striped">
        <thead>
        <tr>
          <th class="sort-by-title pointer">
            <%= t('admin.badges.index.name') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th> 
          <th><%= t('admin.badges.index.image') %></th>
          <th><%= t('admin.badges.index.rule') %></th>
          <th><%= t('admin.badges.index.parameter') %></th>
          <th colspan="3"><%= t('tests.index.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @badges %>
      </tbody>
      </table>
    </div>
  </div>
</div>