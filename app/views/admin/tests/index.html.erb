<div class="row justify-content-center mt-3">
  <div class="col col-md-4"><h1><%= t('.header') %></h1></div>
    <div class="col-10">
      <p>
        <%= link_to t('.new_test'), new_admin_test_path %>
      </p>

      <%= render 'shared/errors', resource: @test %>
      
      <table class="table table-striped">
        <tr>
          <th class="sort-by-title pointer">
            <%= t('tests.index.title') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th> 
          <th><%= t('tests.index.level') %></th>
          <th><%= t('tests.index.quest_count') %></th>
          <th colspan="3"><%= t('tests.index.actions') %></th> 
        </tr>
        <%= render @tests %>
      </table>
    </div>
  </div>
</div>

