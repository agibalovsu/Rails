<!DOCTYPE html>
<html>
  <head>
    <title><%= t('shared.admin_nav.header') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <div class="nav user">
        <%= t('shared.admin_nav.welcome') %><b class="nav-admin user-email"><%= current_user.email %></b> <%= t('shared.admin_nav.name') %> |
        <%= link_to t('shared.admin_nav.logout'), destroy_user_session_path, method: :delete %>
      </div>
    <%end%>

    <%= render 'shared/flash' %>

    <%= yield %>

    <%= render '/shared/footer' %>
  </body>
</html>
