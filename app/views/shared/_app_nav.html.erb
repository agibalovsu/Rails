<app_nav class="navbar navbar-light bg-light ">
  <%= link_to t('.name'), root_path, class: 'navbar-brand'%>

  <span class="navbar-text">
    <% if user_signed_in? %>
      <%= t('shared.admin_nav.welcome') %><b class="nav-admin user-email"><%= current_user.email %></b> <%= t('shared.admin_nav.name') %> |
      <%= link_to t('shared.admin_nav.logout'), destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to t('shared.admin_nav.sign_in'), new_session_path(resource_name) %> |
      <%= link_to t('shared.admin_nav.sign_up'), new_registration_path(resource_name) %>
    <%end%>
  </span>
</app_nav>





